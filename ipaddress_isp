<script type="text/javascript">
var urls = "https://trustpositif.komdigi.go.id/";
var base_url = window.location.origin
$(document).ready(function(){
       $.ajax({
              method:'GET',
              type:'ajax',
              url:base_url + '/Rest_server/gettotalrecordsperkategori',
              dataType:'json',
              success: function(data){
                var obj = data;
                console.log(obj);
                var objPornografi = obj[0].TotalPornografi;
                var objRadikalisme = obj[0].TotalRadikalisme;
                var objSarah = obj[0].TotalSARA;
                var objKekerasan = obj[0].TotalKekerasan;
                var objPornoanak = obj[0].TotalKekerasanPornografiAnak;
                var objPerjudian = obj[0].TotalPerjudian;
                var objNormalisasi = obj[0].TotalRadikalisme;
                var objTotalInvestasiIlegal = obj[0].TotalInvestasiIlegal;
                var objTotalFitnah = obj[0].TotalFitnah;
                var objTotalPenipuanOnline = obj[0].TotalPenipuanOnline;
                var objTotalHKI = obj[0].TotalHKI;
                var objTotalPelanggaranKeamananInformasi = obj[0].TotalPelanggaranKeamananInformasi;
                var objTotalPelanggaranUUITE = obj[0].TotalPelanggaranUUITE;
                var objTotalPerdaganganProdukAturanKhusus = obj[0].TotalPerdaganganProdukAturanKhusus;
                var objInstansiSektor = obj[0].TotalKontenNegatifDirekomendasikanInstansiSektor;
                var objTotalKontenMeresahkanMasyarakat = obj[0].TotalKontenMeresahkanMasyarakat;
                var objTotalSeparatisme = obj[0].TotalSeparatisme;
                var objLastDate = obj[0].lastdate;
                var objmelanggar_nilai_sosia = obj[0].TotalKontenMelanggarNilaiSosialBudaya;
                var objTotalHOAKS= obj[0].TotalHOAKS;
                var objTotalPemerasan= obj[0].TotalPemerasan;
                var objTotalKontenMemfasilitasiKontenNegatif= obj[0].TotalKontenMemfasilitasiKontenNegatif;
                
                // html 
                $('#pornografi').text(objPornografi);
                $('#radikal').text(objRadikalisme);
                $('#sarah').text(objSarah);
                $('#kekerasan').text(objKekerasan);
                $('#porn_anak').text(objPornoanak);
                $('#perjudian').text(objPerjudian);
                $('#normalisasi').text(objNormalisasi);
                $('#investasi').text(objTotalInvestasiIlegal);
                $('#fitnah').text(objTotalFitnah);
                $('#penipuan_online').text(objTotalPenipuanOnline);
                $('#hki').text(objTotalHKI);
                $('#keamanan_informasi').text(objTotalPelanggaranKeamananInformasi);
                $('#uu_ite').text(objTotalPelanggaranUUITE);
                $('#produk_aturan_khusus').text(objTotalPerdaganganProdukAturanKhusus);
                $('#instansi_sektor').text(objInstansiSektor);
                $('#meresahkan_masyarakat').text(objTotalKontenMeresahkanMasyarakat);
                $('#organisasi_berbahaya').text(objTotalSeparatisme);
                $('#lastupdate').text(objLastDate);
                $('#melanggar_nilai_sosial').text(objmelanggar_nilai_sosia);
                $('#total_hoaks').text(objTotalHOAKS);
                $('#total_pemerasan').text(objTotalPemerasan);
                $('#konten_memfasilitasi_konten_negatif').text(objTotalKontenMemfasilitasiKontenNegatif);

                

              },
              error: function(){
                console.log('Error');
              }
          });
    });

  $('#text-footer').on('click', function(){
    $('#daftar-block').show();
     $('#show_loading').show();
    var txt = $.trim($("#input-data").val());
    var passhtml = '';
      $.ajax({
              method:'POST',
              type:'ajax',
              dataType: 'json',
              url:base_url + '/Rest_server/getrecordsname_home',
              data:{ 'csrf_token': '40cd0472d08070b1db3ef07aa0c30061', name : txt},
              success: function(data){
          var resultdata = data.values;
          var passdata = resultdata[0].Domain;
         for(i=0; i < resultdata.length; i++){
            console.log(resultdata[i].Domain);
            console.log(resultdata[i].Status);
             $('#show_loading').hide();
            passhtml +=  '<tr>'+
                             // '<td>'+(i+1)+'</td>'+
                             '<td>'+resultdata[i].Domain+'</td>'+
                             '<td>'+resultdata[i].Status+'</td>'+
                           '</tr>' ;
                }
                $('#show-result').html(passhtml);
              },
              error: function(){
                console.log('Error');
              }
          });
  });
  $('.inputarea').on('change paste keyup', function(e){
    var t = $.trim($("#input-data").val()); 
    var lines = t.split(/\r|\r\n|\n/);
    var lengtrow = lines.length;
      if (lengtrow >= 6 ) {
          alert("limit 5 Row");
          $('.inputarea').val('');
      }
  });
  
$('#btn-tampil').on('click', function(){
    $('#show-all-category').toggle('show');
    $(this).hide('slow');
    $('#btn-hide').show('slow');
});
$('#btn-hide').on('click', function(){
    $(this).hide();
    $('#show-all-category').hide('slow');
    $('#btn-tampil').show('slow');
});
</script>

