        document.getElementById('domain').addEventListener('submit', function(event) {
            event.preventDefault(); // Mencegah pengiriman form otomatis
            grecaptcha.ready(function() {
                grecaptcha.execute('6LeEuTUqAAAAAA7DTOhIAzGkwdBRS6wGQOB2r1xV', {action: 'submit'}).then(function(token) {
                    document.getElementById('recaptchaToken').value = token;
                    document.getElementById('domain').submit(); // Kirim form setelah mendapatkan token
                });
            });
        });
    </script> 
